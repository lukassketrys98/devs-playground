<article class="article__card{% if different_card_layout %}--wide {% endif %}">
            <div class="article__card__content {% if last_card %}article__card__content--extra-padding {% endif %}">
                <h2 class="article__card__title"><a href="{{ article.url }}">{{ article.title }}</a></h2>
                <div class="article__card__excerpt">
                    <p>{{ article.excerpt_or_content | strip_html | truncatewords: 20 }}</p>
                    <div class="article__card__bottom">
                        <div class="article__card__time">
                            <time>{{ article.published_at | date: format: 'month_day_year' }}</time>
                        </div>
                        <div class="article__card__read__button">
                            <a href="{{ article.url }}">{{ "blogs.blog.read_more" | t }}</a>
                        </div>
                    </div>
                </div>          
            </div>

            <div class="article__card__image">
                {% if article.image %}
                <figure class="blog__item__image">
                <a href="{{ article.url }}">
                    {% assign image_widths = '315, 630, 945' %}
                    {% assign image_noscript_width = '315x' %}
                    {%-
                    render 'image',
                    image_object: article.image,
                    image_widths: image_widths,
                    image_noscript_width: image_noscript_width,
                    image_link: false,
                    image_additional_content: false,
                    image_class: false,
                    image_attributes: false
                    -%}
                </a>
                </figure>
            {% endif %}
            </div>
</article>