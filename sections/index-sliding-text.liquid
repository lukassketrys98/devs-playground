{{ 'section-sliding-text.min.css' | asset_url | stylesheet_tag }}

{%- capture textSize -%}
    {% case section.settings.text--scrolling-text--text-size %}
    {% when 'small' %}
        index-sliding-text__wrapper--small
    {% when 'medium' %}
        index-sliding-text__wrapper--medium
    {% when 'large' %}
        index-sliding-text__wrapper--large
    {% endcase %}
{%- endcapture -%}

{%- capture fontFamily -%}{% case section.settings.text--scrolling-text--font %}{% when 'bodyFont' %}index-sliding-text__wrapper--body{% when 'headingFont' %}index-sliding-text__wrapper--heading{% endcase %}{%- endcapture -%}

{% if section.settings.text--scrolling--link %}
    <a href="{{ section.settings.text--scrolling--link }}">
{% endif %}
<section
  class="index-sliding-text"
  data-section-id="{{ section.id }}"
  data-section-type="home"
  data-section-child="sliding-text"
>

    <div class="index-sliding-text__wrapper {{ textSize }} {{ fontFamily }}">

      <div class="index-sliding-text__wrapper__block">
        <div class="index-sliding-text__wrapper__block__inner">
          {% for block in section.blocks %}
            <span class="index-sliding-text__item">{{ block.settings.text--scrolling-text_text }}</span>
          {% endfor %}
        </div>
      </div>

    </div>

</section>

{% if section.settings.text--scrolling--link %}
    </a>
{% endif %}

<style type="text/css">
    #shopify-section-{{ section.id }} .index-sliding-text {
      background-color: {{ section.settings.text--scrolling--background-color }};
      color: {{ section.settings.text--scrolling-text--text-color }};
    }
</style>

